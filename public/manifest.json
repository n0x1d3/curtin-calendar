{
  "manifest_version": 3,
  "name": "Curtin Calendar",
  "version": "0.3.3",
  "description": "Export your Curtin timetable to a calendar file in one click. Actively maintained fork with bug fixes for 2026+.",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Curtin Calendar",
    "default_popup": "popup.html"
  },
  "permissions": ["downloads", "storage"],
  "content_scripts": [
    {
      "matches": [
        "https://curtin-web.t1cloud.com/T1SMDefault/WebApps/eStudent/SM/*"
      ],
      "run_at": "document_idle",
      "js": ["contentScript.js", "readTable.js"]
    }
  ]
}
