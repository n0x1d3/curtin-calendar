{
  "manifest_version": 3,
  "name": "Curtin Calendar",
  "version": "0.4.1",
  "description": "Export your Curtin timetable to ICS with room locations, Google Maps, and Curtin campus map links.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Curtin Calendar",
    "default_popup": "popup.html"
  },
  "permissions": ["downloads", "storage", "tabs"],
  "content_scripts": [
    {
      "matches": [
        "https://curtin-web.t1cloud.com/T1SMDefault/WebApps/eStudent/SM/*"
      ],
      "run_at": "document_idle",
      "js": ["contentScript.js", "readTable.js"]
    }
  ]
}
